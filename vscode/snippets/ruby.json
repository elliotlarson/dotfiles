{
  /*
    // Place your snippets for Ruby here. Each snippet is defined under a snippet name and has a prefix, body and
    // description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
    // $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the
    // same ids are connected.
    // Example:
    "Print to console": {
      "prefix": "log",
      "body": [
        "console.log('$1');",
        "$2"
      ],
      "description": "Log output to console"
    }
  */
    "binding.pry": {
      "prefix": "bp",
      "body": ["binding.pry;1;"],
      "description": "binding.pry"
    },
    "spec": {
      "prefix": "spe",
      "body": [
        "# frozen_string_literal: true",
        "",
        "RSpec.describe($1) do",
        "  def do_call",
        "    described_class.call($2)",
        "  end",
        "end",
        ""
      ],
      "description": "basic rspec template"
    },
    "let": {
      "prefix": "le",
      "body": [
        "let(:$1) { $2 }"
      ],
      "description": "rspec let"
    },
    "context": {
      "prefix": "con",
      "body": [
        "context(:$1) do",
        "  $2",
        "end"
      ],
      "description": "rspec context"
    },
    "describe": {
      "prefix": "des",
      "body": [
        "describe(:$1) do",
        "  $2",
        "end"
      ],
      "description": "rspec describe"
    }
  }